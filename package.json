  },
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "0.11.0",
    "commander": "14.0.2",
    "degit": "2.8.4",
    "execa": "9.6.1",
    "fs-extra": "11.3.2",
    "picocolors": "1.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/degit": "2.8.6",
    "@types/fs-extra": "11.0.4",
    "@types/node": "24.10.1",
    "husky": "9.1.7",
    "ts-node": "10.9.2",
    "tsup": "8.5.1",
    "typescript": "5.9.3"
  }
